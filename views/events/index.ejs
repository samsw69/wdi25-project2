<div class="container-fluid">
  <% if (locals.isAuthenticated && locals.createdBy) { %>
    <form method="POST" action="/events/<%= event.id %>">
    <input type="hidden" name="_method" value="DELETE">
    <button>Delete</button>
    </form>
  <% } %>

  <div class="indexStyle">
    <div class="page-header">
      <h1>The weekend is here...</h1>
    </div>
  </div>

  <div class="row">
    <% events.forEach((event) => { %>
      <div class="col-sm-4" 
      <h2>date:<%= event.date %></h2>
      <h3><a href="/events/<%= event.id %>"><%= event.activity %></a></h3>
      <img class="img-fluid" src="<%= event.image %>" alt="<%= event.activity %>">
      </div>
    <% }) %>
  </div>
