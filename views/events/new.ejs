<div class="container-fluid ">
  <div class="indexStyle">
    <div class="page-header">
      <h1>Let's get some activities up and running for these chooks...</h1>
    </div>

    <section id="addEvent" class="container">
      <form method="POST" action="/events">

    <div class="form-group">
      <label for="henName">Bride to be's name?</label>
      <input type="text" name="henName" id="henName">
    </div>

    <div class="form-group">
      <label for="activity">Activity</label>
      <input type="text" name="activity" id="activity">
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      <input type="date" name="date" id="date">
    </div>

    <div class="form-group">
      <label for="time">Time</label>
      <input type="time" name="time" id="time">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" name="description" id="description">
    </div>

    <div class="form-group">
      <label>Add url for image here</label>
      <input type="text" name="image" id="image">
    </div>

    <div class="form-group">
      <label for="address1">Street Address</label>
      <input type="text" name="address1" id="address1">
    </div>

    <div class="form-group">
      <label for="address2">City</label>
      <input type="text" name="address2" id="address2">
    </div>

    <div class="form-group">
      <label for="postcode">Postcode</label>
      <input class="autocomplete" type="text" name="postcode" id="postcode" class="form-control">
      <input type="hidden" name="lat" class="form-control">
      <input type="hidden" name="lng" class="form-control">
    </div>

    <button type="submit" class="btn btn-outline-info waves-effect">Add</button>
  </form>
</section>
