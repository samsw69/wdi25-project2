<h1>Edit your user profile</h1>
<div container=form>
<form method="POST" action="/users/<%= user.id %>">
<input type="text" name="_method" value="PUT">

  <div>
    <label for="firstName">First name?</label>
    <input type="text" name="firstName" id="firstName" value="<%= user.firstName %>">
  </div>

  <div>
    <label for="lastName">Surname</label>
    <input type="text" name="lastName" id="lastName" value="<%= user.lastName %>">
  </div>

  <div>
    <label for="username">username</label>
    <input type="text" name="username" id="username" value="<%= user.username %>">
  </div>

  <div>
    <label for="email">Email address</label>
    <input type="email" name="email" id="email" value="<%= user.email %>">
  </div>

  <div>
    <label for="password">Enter password</label>
    <input type="password" name="password" id="password" value="<%= user.password %>">
  </div>

  <div>
    <label for="passwordConfirmation">Re-enter password</label>
    <input type="password" name="passwordConfirmation" id="passwordConfirmation" value="<%= user.passwordConfirmation %>">
  </div>

  <div>
    <label for="profileImage">Add url for image here</label>
    <input type="file" name="profileImage" id="profileImage" value="<%= user.profileImage %>">
  </div>

  <div>
    <label for="knowHen">How do you know the hen?</label>
    <input type="text" name="knowHen" id="knowHen" value="<%= user.knowHen %>">
  </div>

  <div>
    <label for="funnyStory">Funny Story?</label>
    <input type="text" name="funnyStory" id="funnyStory" value="<%= user.funnyStory %>">
  </div>

  <button class="btn btn-primary">Edit</button>

</form>
